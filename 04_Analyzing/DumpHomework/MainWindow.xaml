<Window x:Class="DumpHomework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DumpHomework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- TextBox -->
            <RowDefinition Height="*"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <TextBox x:Name="tb" Grid.Row="0" FontSize="24" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Top" IsReadOnly="True" Height="50" />

        <UniformGrid Grid.Row="1" Rows="5" Columns="4" Margin="10">
            <!-- First Row -->
            <Button Content="7" Click="Button_Click_1"/>
            <Button Content="8" Click="Button_Click_1"/>
            <Button Content="9" Click="Button_Click_1"/>
            <Button Content="+" Click="Button_Click_1"/>

            <!-- Second Row -->
            <Button Content="4" Click="Button_Click_1"/>
            <Button Content="5" Click="Button_Click_1"/>
            <Button Content="6" Click="Button_Click_1"/>
            <Button Content="-" Click="Button_Click_1"/>

            <!-- Third Row -->
            <Button Content="1" Click="Button_Click_1"/>
            <Button Content="2" Click="Button_Click_1"/>
            <Button Content="3" Click="Button_Click_1"/>
            <Button Content="*" Click="Button_Click_1"/>

            <!-- Fourth Row -->
            <Button Content="0" Click="Button_Click_1"/>
            <Button Content="." Click="Button_Click_1"/>
            <Button Content="=" Click="Result_click"/>
            <Button Content="/" Click="Button_Click_1"/>

            <!-- Fifth Row -->
            <Button Content="←" Click="R_Click"/>
            <!-- Backspace -->
            <Button Content="Del" Click="Del_Click"/>
            <!-- Clear -->
            <Button Content="OFF" Click="Off_Click_1"/>
            <!-- Exit -->
            <Button Content="%" Click="Button_Click_1"/>
            <!-- Optional -->
        </UniformGrid>
    </Grid>
</Window>
